<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_without_logo"
    android:orientation="vertical" >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tensp"
        android:layout_marginTop="@dimen/twohundredsp" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/fortune" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_relative_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/twentysp"
            android:layout_marginRight="@dimen/twentysp" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/fortune_background" />

            <TextView
                android:id="@+id/fortuneCookieLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/foursp"
                android:layout_marginRight="@dimen/foursp"
                android:gravity="center"
                android:lines="@integer/two"
                android:text="Fortune Text goes here"
                android:textColor="#FF0000"
                android:textSize="5pt"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/twentysp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="false"
            android:layout_marginLeft="@dimen/fortysp"
            android:layout_marginRight="@dimen/fortysp"
            android:gravity="center"
            android:lines="@integer/two"
            android:text="Press back button to get back to main view" />
    </RelativeLayout>

</LinearLayout>