<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/skyline_background"
    android:orientation="vertical"
              >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/onehundredfiftysp"
                android:paddingLeft="@dimen/twentysp"
                android:paddingRight="@dimen/twentysp"
                android:paddingTop="@dimen/twentysp" >

                <LinearLayout
                    android:id="@+id/llButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingTop="@dimen/twentysp" >

                    <Button
                        android:id="@+id/btnTakePicture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Take Social Pic"
                        android:background="@drawable/red_button_statelist"
                        android:layout_marginRight="8dp"
                        android:textColor="@color/White"/>

                    <Button
                        android:id="@+id/btnSharePicture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Share Social Pic"
                        android:background="@drawable/red_button_statelist"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/White"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlSnapshot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/llButtons"
                    android:orientation="vertical"
                    android:longClickable="true">

                    <ImageView
                        android:id="@+id/ivSnapshot"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/funpixbackground"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="0dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/position_message"
                        android:id="@+id/tvDragMessage"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/White"/>

                    <ImageView
                        android:layout_width="400dp"
                        android:layout_height="400dp"
                        android:id="@+id/ivLogo"
                        android:src="@drawable/watermark"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="200dp"
                        android:scaleType="fitCenter"/>

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>