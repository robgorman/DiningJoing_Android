<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
                android:background="@drawable/back_ground_frame_1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@null"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/fivesp"
                android:layout_marginLeft="@dimen/fivesp"
                android:layout_marginRight="@dimen/fivesp"
                android:layout_marginTop="@dimen/fivesp"
                android:background="@null"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/layoutServeAnyPurpose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/show_me_the"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/fifteensp"
                        />

                    <Button
                        android:id="@+id/buttonPurpose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/purpose"
                        android:textColor="@color/White"
                        android:textSize="@dimen/fifteensp"
                        android:src="@drawable/button_search_criteria"
                        android:background="@drawable/button_search_criteria"
                        android:minHeight="50dp"
                        android:minWidth="260dp"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="false"
                        android:textAlignment="center"
                        android:clickable="false"
                        android:layout_marginBottom="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutAnyOccasion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/textfor"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/fifteensp"
                        android:layout_marginBottom="4dp"/>

                    <Button
                        android:id="@+id/buttonOccasion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/button_search_criteria"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/occasion"
                        android:textColor="@color/White"
                        android:textSize="@dimen/fifteensp"
                        android:textAlignment="center"
                        android:minHeight="50dp"
                        android:minWidth="260dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutAreaOf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView101"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/in_the_area_of"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/fifteensp"
                        android:layout_marginBottom="4dp"/>

                    <Button
                        android:id="@+id/buttonLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/button_search_criteria"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/neighborhood"
                        android:textColor="@color/White"
                        android:textSize="@dimen/fifteensp"
                        android:minHeight="50dp"
                        android:minWidth="260dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutServing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView102"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/serving"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/fifteensp"
                        android:layout_marginBottom="4dp"/>

                    <Button
                        android:id="@+id/buttonCousine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/button_search_criteria"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/cuisine"
                        android:textColor="@color/White"
                        android:textSize="@dimen/fifteensp"
                        android:minWidth="260dp"
                        android:minHeight="50dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView103"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="@string/limit_to_those_with"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/fifteensp"
                        android:gravity="center_horizontal"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/ll0">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="27dp"
                                android:id="@+id/imageView"
                                android:src="@drawable/delivery"
                                android:scaleType="fitXY"
                                android:clickable="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:longClickable="false"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/imageView3"
                                android:src="@drawable/unchecked"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="fitXY"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:focusableInTouchMode="false"
                            android:id="@+id/ll1">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="27dp"
                                android:id="@+id/imageView4"
                                android:src="@drawable/wifi"
                                android:scaleType="fitXY"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/imageView5"
                                android:src="@drawable/unchecked"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="fitXY"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/ll2">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="27dp"
                                android:id="@+id/imageView6"
                                android:src="@drawable/tv"
                                android:scaleType="fitXY"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/imageView7"
                                android:src="@drawable/unchecked"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="fitXY"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/ll3">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="27dp"
                                android:id="@+id/imageView8"
                                android:src="@drawable/livemusic"
                                android:scaleType="fitXY"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/imageView9"
                                android:src="@drawable/unchecked"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="fitXY"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/ll4">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="27dp"
                                android:id="@+id/imageView10"
                                android:src="@drawable/karaoke"
                                android:scaleType="fitXY"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/imageView11"
                                android:src="@drawable/unchecked"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="fitXY"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/ll5">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="27dp"
                                android:id="@+id/imageView12"
                                android:src="@drawable/dancing"
                                android:scaleType="fitXY"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/imageView13"
                                android:src="@drawable/unchecked"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="fitXY"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/ll6">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="27dp"
                                android:id="@+id/imageView14"
                                android:src="@drawable/catering"
                                android:scaleType="fitXY"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/imageView15"
                                android:src="@drawable/unchecked"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="fitXY"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/ll7">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="27dp"
                                android:id="@+id/imageView118"
                                android:src="@drawable/takeout"
                                android:scaleType="fitXY"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/imageView119"
                                android:src="@drawable/unchecked"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="fitXY"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/ll8">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="27dp"
                                android:id="@+id/imageView120"
                                android:src="@drawable/oceanview"
                                android:scaleType="fitXY"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/imageView121"
                                android:src="@drawable/unchecked"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="fitXY"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/ll9">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="27dp"
                                android:id="@+id/imageView122"
                                android:src="@drawable/reservations"
                                android:scaleType="fitXY"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/imageView123"
                                android:src="@drawable/unchecked"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="fitXY"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/ll10">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="27dp"
                                android:id="@+id/imageView124"
                                android:src="@drawable/gluttenfree"
                                android:scaleType="fitXY"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/imageView125"
                                android:src="@drawable/unchecked"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="fitXY"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/ll11">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="27dp"
                                android:id="@+id/imageView126"
                                android:src="@drawable/veganoptions"
                                android:scaleType="fitXY"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/imageView127"
                                android:src="@drawable/unchecked"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="fitXY"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/ll12">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="27dp"
                                android:id="@+id/imageView28"
                                android:src="@drawable/dogfriendly"
                                android:scaleType="fitXY"
                                android:layout_gravity="top"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/imageView129"
                                android:src="@drawable/unchecked"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="fitXY"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/buttonFindJoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/red_button_statelist"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/find_joints"
                        android:layout_gravity="center_horizontal"
                        android:minWidth="180dp"
                        android:minHeight="50dp"
                        android:textColor="@color/White"
                        android:textSize="20sp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>